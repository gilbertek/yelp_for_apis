<%= form_for @api, url: {action: "update"}, html: {class: "update_api"} do |f| %>

<h3>Udpdate rating for <%= @api.name %> </h3>
<h4>Current rating: <%= @api.average_rating %></h4>

<p></p>


<div class="form-group">
    <%= fields_for :rates do |rate| %>
        <%= rate.label :rate %>
        <%= rate.text_field :rate, class: "form-control", placeholder: "Add a number between 1 and 5" %>
    <% end %>
</div>

<div class="form-group">
    <%= f.submit "Update!", class: "btn btn-default btn-primary btn-lg" %>
</div>
<% end %>