<div class="row">

    <%= form_for @api, url: {action: "create"}, html: {class: "new_api"} do |f| %>

    <% if @api.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@api.errors.count, "error") %> prohibited this api from being saved:</h2>

          <ul>
          <% @api.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>

    <div class="input-group input-lg">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="input-group input-group-lg">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control"  %>
    </div>

    <div class="input-group input-group-lg">
        <%= f.label :permalink %>

        <%= f.text_field :permalink, class: "form-control"  %>
    </div>

    <div class="input-group input-group-lg">
        <%= f.label :image %>

        <%= f.text_field :image, class: "form-control" %>
    </div>

    <div class="input-group input-group-lg">
        <%= fields_for :rates do |rate| %>
            <%= rate.label :rate %>
            <%= rate.text_field :rate, class: "form-control", placeholder: "Add a number between 1 and 5" %>
        <% end %>
    </div>

    <div class="input-group input-group-lg">
        <%= f.submit "Create", class: "btn btn-default btn-primary"  %>
    </div>

    <% end %>
</div>
